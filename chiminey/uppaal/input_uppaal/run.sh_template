#!/bin/sh

INPUT_DIR=$1
OUTPUT_DIR=$2

java_exe=$(whereis java 2>&1 | awk '/java/ {print $2}')
java_path=$(dirname $java_exe)

verifyta_exe=$(locate verifyta 2>&1 | grep '/opt/')

export PATH=$java_path:$PATH

$verifyta_exe $INPUT_DIR/{{uppaal_model}} {{uppaal_string}} > $OUTPUT_DIR/result
# --- EOF ---
